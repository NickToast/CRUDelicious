@{
    ViewData["Title"] = "CRUDelicious";
}

@model List<Dish>

<div class="text-center">
    <h1 class="display-4">Welcome to @ViewData["Title"]</h1>
</div>

<div class="d-flex justify-content-center gap-3 my-3">
    <a asp-controller="Dish" asp-action="Index" class="link text-dark">Home</a>
    <span>|</span>
    <a asp-controller="Dish" asp-action="NewDish" class="link text-dark">Add a Dish</a>
</div>

<div>
    <p class="ms-3">Check out some recent dishes</p>
    <hr class="w-50 my-3">
@foreach(Dish dish in Model)
{
    <p class="my-3 ms-3"><a asp-controller="Dish" asp-action="ViewDish" asp-route-dishId="@dish.DishId" class="link">@dish.Name</a> by @dish.Chef</p>
}
</div>