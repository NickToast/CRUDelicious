@{
    ViewData["Title"] = "View Dish Page";
}

@model Dish

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
</div>

<div class="d-flex justify-content-center gap-3 my-3">
    <a asp-controller="Dish" asp-action="Index" class="link text-dark">Home</a>
    <span>|</span>
    <a asp-controller="Dish" asp-action="NewDish" class="link text-dark">Add a Dish</a>
</div>

<div class="d-flex flex-column">
    <p class="ms-3">@Model.Name by @Model.Chef</p>
    <hr class="w-50 my-3">
    <div class="ms-3 d-flex flex-column gap-3">
        <h6>Description: @Model.Description</h6>
        <h6>Calories: @Model.Calories</h6>
        <h6>Tastiness: @Model.Tastiness</h6>
    </div>
</div>
<div class="d-flex justify-content-evenly w-50 my-3">
    <form asp-controller="Dish" asp-action="Delete" asp-route-dishId="@Model.DishId">
        <button class="btn btn-outline-danger">Delete</button>
    </form>
    <a asp-controller="Dish" asp-action="Edit" asp-route-dishId="@Model.DishId" class="btn btn-outline-warning">Edit</a>
</div>